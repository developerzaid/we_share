<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="20dp"
    android:id="@+id/relativeLayoutdf"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    xmlns:android="http://schemas.android.com/apk/res/android">



<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent">







        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageViewwe"
            android:layout_width="75dp"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="75dp"
            android:contentDescription="Icon" />

        <TextView
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:id="@+id/itemName"
            android:textColor="#000000"
            android:text="Donation Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewwe"
            android:layout_toRightOf="@id/imageViewwe"
            android:textSize="20sp"/>

        <TextView
            android:layout_marginRight="20dp"
            android:id="@+id/itemDesc"
            android:text="this is the desciptuion of the products "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewwe"
            android:layout_toRightOf="@id/imageViewwe"
            android:layout_below="@id/itemName"
            android:textSize="18sp"/>

        <TextView
            android:textStyle="italic"
            android:layout_marginRight="20dp"
            android:id="@+id/lastLocation"
            android:text="Current Location : Donater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewwe"
            android:layout_toRightOf="@id/imageViewwe"
            android:layout_below="@id/itemDesc"
            android:textSize="16sp"/>

</RelativeLayout>

    </androidx.cardview.widget.CardView>

