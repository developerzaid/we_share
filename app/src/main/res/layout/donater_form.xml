<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT YOUR DONATION"
            android:textSize="20sp"
            android:layout_marginBottom="40dp"
            android:textColor="#FF9800"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donater User Name"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    <EditText
        android:layout_width="match_parent"
        android:hint="Donater Name"
        android:id="@+id/donater_name"
        android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donater City"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    <EditText
        android:layout_width="match_parent"
        android:hint="Donater City"
        android:id="@+id/donater_city"
        android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donater Phone No"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    <EditText
        android:layout_width="match_parent"
        android:hint="Donater Phone no"
        android:id="@+id/donater_phone"
        android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donation Name"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    <EditText
        android:layout_width="match_parent"
        android:hint="Donation Name"
        android:id="@+id/donation_name"
        android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donation Area"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    <Spinner
        android:layout_marginTop="10dp"
        android:id="@+id/donater_area_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donation Description"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    <EditText
        android:layout_width="match_parent"
        android:hint="Donation Description"
        android:id="@+id/donation_description"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_marginTop="20dp"
        android:background="@drawable/button_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:id="@+id/ItemImagexxx"/>

  <Button
      android:layout_marginTop="20dp"
      android:layout_marginBottom="40dp"
      android:background="@drawable/button_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Submit Donation"
    android:id="@+id/submit_donation_form"/>


    </LinearLayout>


</ScrollView>