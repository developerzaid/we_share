<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donater login"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="120dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/text"
        >
    </TextView>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_baseline_connect_without_contact_24"
        android:layout_below="@+id/text"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp">

    </ImageView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:id="@+id/donater_username"
        android:hint="Username"
        android:textColorHint="@color/colorPrimaryDark"
        >
    </EditText>

    <EditText
        android:layout_below="@+id/donater_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:id="@+id/donater_password"
        android:hint="Password"
        android:textColorHint="@color/colorPrimaryDark"
        >
    </EditText>
    <EditText
        android:layout_below="@+id/donater_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:textColorHint="@color/colorPrimaryDark"
        android:id="@+id/donater_email"
        android:hint="Email"
        >
    </EditText>

    <Button
        android:layout_centerHorizontal="true"
        android:background="@color/design_default_color_primary"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/donater_loginBtn"
        android:text="Login "
        android:textColor="@color/colorAccent"
        android:layout_below="@id/donater_email"
        android:layout_marginTop="20dp">

    </Button>
    <TextView
        android:id="@+id/donater_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wants to Register as an Donater? Sign up here"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/donater_loginBtn"
        />


</RelativeLayout>